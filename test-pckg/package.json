{
  "name": "online-zoo",
  "version": "0.0.1",
  "description": "Online-zoo is a platform that collects information about animals from various zoos with webcams.",
  "main": "index.js",
  "author": "Max Ilyasov",
  "license": "ISC",
  "scripts": {
    "start": "run-p watch watch:styles",
    "build": "run-s clean clean:styles build:styles copy",
    "deploy": "run-s build publish",
    "build:styles": "sass src/sass:src/styles",
    "watch": "live-server src",
    "watch:styles": "sass src/sass:src/styles --watch",
    "clean": "del-cli dist",
    "clean:styles": "del-cli src/styles",
    "copy": "mkdir dist && xcopy src dist /e /exclude:excludelist.txt",
    "publish": "gh-pages -d dist -e test-pckg -m \"Deploying to gh-pages\""
  },
  "dependencies": {
    "gh-pages": "^4.0.0",
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "sass": "^1.55.0",
    "del-cli": "^5.0.0"
  }
}